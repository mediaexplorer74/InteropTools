<UserControl
    x:Class="InteropTools.ShellPages.Registry.TweakBoolControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InteropTools.ShellPages.Registry"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,24" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="92" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock x:Name="TitleBox" TextWrapping="Wrap" />
            <TextBlock
                x:Name="DescBox"
                Margin="0,4,0,0"
                Opacity="0.75"
                TextWrapping="Wrap" />
        </StackPanel>
        <ToggleSwitch
            x:Name="MainSwitch"
            Grid.Column="1"
            Margin="12,0,0,0"
            IsOn="false"
            Toggled="MainSwitch_Toggled" />
    </Grid>
</UserControl>