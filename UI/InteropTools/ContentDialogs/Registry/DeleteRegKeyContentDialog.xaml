<ContentDialog
    x:Class="InteropTools.ContentDialogs.Registry.DeleteRegKeyContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InteropTools.ContentDialogs.Registry"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TITLE"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Yes"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="No"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock x:Name="Description" TextWrapping="Wrap" />
        <CheckBox
            x:Name="RecurseCheckBox"
            Margin="0,8,0,0"
            Content="Delete recursively all data under that key" />
    </StackPanel>
</ContentDialog>
