<ContentDialog
    x:Class="InteropTools.ContentDialogs.Registry.MountHiveContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InteropTools.ContentDialogs.Registry"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Mount a registry hive"
    PrimaryButtonText="Mount"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <TextBox
            x:Name="NewName"
            PlaceholderText="The name of the key where the hive will be mounted"
            HorizontalAlignment="Stretch" />
    </Grid>
</ContentDialog>
